{
  "name": "@jopi-loader/tools",
  "version": "1.0.36",
  "private": false,
  "license": "MIT",
  "description": "Tools for jopi-loader",
  "engines": {
    "bun": "^1.2.18",
    "node": ">=22.18.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "src"
  ],
  "scripts": {
    "build": "npx tsc",
    "tsc": "npx tsc",
    "bun-publish": "npx tsc && bun publish",
    "untrack": "git rm -r --cached -- ./dist/**;",
    "clean": "rm -rf ./dist; rm -rf .turbo; rm tsconfig.tsbuildinfo"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "latest",
    "@types/sass": "latest",
    "@types/postcss-url": "^10.0.4",
    "@jopi-loader/types": "workspace:^"
  },
  "dependencies": {
    "@jopi-loader/client": "workspace:^",
    "chokidar": "^4.0.3",
    "esbuild": "^0.25.9",
    "jopi-node-space": "workspace:^",
    "postcss": "^8.5.6",
    "postcss-modules": "^6.0.1",
    "postcss-url": "^10.1.3",
    "sass": "^1.90.0",
    "strip-json-comments": "^5.0.3",
    "ws": "^8.18.3"
  },
  "nodeSwitch": true,
  "nodeSwitch-default": "node",
  "publishedDate": "9/29/2025",
  "publicPublishedDate": "9/25/2025"
}